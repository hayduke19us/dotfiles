tmux -2 new-session -s sc -n editor -d
tmux -2 send-keys -t sc 'cd ~/Sites/surecritic' C-m
tmux -2 send-keys -t sc 'vim' C-m
tmux -2 split-window -v -t sc
tmux -2 split-window -v -t sc
tmux -2 select-layout -t sc main-vertical
tmux -2 send-keys -t sc:1.2 'cd ~/Sites/surecritic' C-m
tmux -2 send-keys -t sc:1.2 'be rails s -p 5000' C-m
tmux -2 new-window -n console -t sc
tmux -2 send-keys -t sc:2 'cd ~/Sites/surecritic' C-m
tmux -2 send-keys -t sc:2 'be rails c' C-m
tmux -2 select-window -t sc:1
tmux -2 attach -t sc

# Open Xcode
open /Applications/Xcode.app
