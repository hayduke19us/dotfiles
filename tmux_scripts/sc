tmux new-session -s sc -n editor -d
tmux send-keys -t sc 'cd ~/Sites/surecritic' C-m
tmux send-keys -t sc 'vim' C-m
tmux split-window -v -t sc
tmux split-window -v -t sc
tmux select-layout -t sc main-vertical
tmux send-keys -t sc:1.2 'cd ~/Sites/surecritic' C-m
tmux send-keys -t sc:1.2 'be rails s -p 5000' C-m
tmux new-window -n console -t sc
tmux send-keys -t sc:2 'cd ~/Sites/surecritic' C-m
tmux send-keys -t sc:2 'be rails c' C-m
tmux select-window -t sc:1
tmux attach -t sc
